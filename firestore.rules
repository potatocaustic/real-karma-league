rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- PRODUCTION HELPER FUNCTION ---
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // --- DEVELOPMENT HELPER FUNCTION ---
    function isAdminDev() {
      return get(/databases/$(database)/documents/users_dev/$(request.auth.uid)).data.role == 'admin';
    }
    match /settings/{doc=**} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin() || isAdminDev(); // Admins can change settings
    }
    // =======================================================
    // V2 PRODUCTION RULES
    // =======================================================

    match /v2_players/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /v2_teams/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /seasons/{seasonId}/{documents=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /draftPicks/{doc=**} {
      allow read: if true;
      allow write: if isAdmin(); 
    }
    match /live_games/{gameId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /transactions/{transactionId} {
      allow read: if true;
      allow create: if isAdmin();
      allow update, delete: if false; 
    }
    match /transactions/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /draft_results/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /awards/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /power_rankings/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /lottery_results/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /live_scoring_status/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /users/{userId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow write: if isAdmin();
    }
    match /daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /post_daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /post_daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /leaderboards/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /{path=**}/seasonal_stats/{recordId} {
        allow get, list: if true;
    }
    match /{path=**}/seasonal_records/{recordId} {
        allow get, list: if true;
    }
    match /v2_teams/{teamId}/seasonal_records/{recordId} {
        allow read: if true;
    }
    match /v2_players/{playerId}/seasonal_stats/{recordId} {
        allow read: if true;
    }
    
    // =======================================================
    // V2 DEVELOPMENT RULES (_dev)
    // =======================================================

    match /v2_players_dev/{document=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /v2_teams_dev/{document=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /seasons_dev/{seasonId}/{documents=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /live_games_dev/{gameId} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /transactions_dev/{transactionId} {
      allow read: if true;
      allow create: if isAdminDev();
      allow update, delete: if false;
    }
    match /transactions_dev/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /draft_results_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /draftPicks_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev(); 
    }
    match /awards_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /power_rankings_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /lottery_results_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /live_scoring_status_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /usage_stats_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /users_dev/{userId} {
        allow read: if request.auth.uid == userId || isAdminDev();
        allow write: if isAdminDev();
    }
    match /daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /post_daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /leaderboards_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /{path=**}/seasonal_stats_dev/{recordId} {
        allow get, list: if true;
    }
    match /{path=**}/seasonal_records_dev/{recordId} {
        allow get, list: if true;
    }
    match /post_daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }

    // MODIFIED: Added explicit paths for the _dev subcollections as well.
    match /v2_teams_dev/{teamId}/seasonal_records_dev/{recordId} {
        allow read: if true;
    }
    match /v2_players_dev/{playerId}/seasonal_stats_dev/{recordId} {
        allow read: if true;
    }
    // =======================================================
    // ADMIN-ONLY & LEGACY RULES (Corrected)
    // =======================================================
    
    match /admins/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false;
    }
    match /players/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /teams/{document=**} { 
      allow read: if true;
      allow write: if false;
    }
    match /schedule/{doc} {
      allow read: if true;
      allow write: if false;
    }
    match /post_schedule/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /weekly_averages/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /transaction_log/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /lineups/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /post_lineups/{doc} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /tradeblocks/{teamId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == request.resource.data.gm_uid || isAdmin() || isAdminDev();
    }
    match /new_players/{doc=**} {
      allow read, write: if isAdmin();
    }
    match /new_teams/{doc=**} {
      allow read, write: if isAdmin();
    }
  }
}


