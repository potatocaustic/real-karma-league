rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- PRODUCTION HELPER FUNCTION ---
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // --- DEVELOPMENT HELPER FUNCTION ---
    function isAdminDev() {
      return get(/databases/$(database)/documents/users_dev/$(request.auth.uid)).data.role == 'admin';
    }

    // =======================================================
    // V2 PRODUCTION RULES
    // =======================================================

    match /v2_players/{playerId}/{documents=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /v2_teams/{teamId}/{documents=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /seasons/{seasonId}/{documents=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /draftPicks/{doc=**} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    match /live_games/{gameId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    // Updated rule for transactions: read is public, write is for the initial document,
    // and new rule for season-specific subcollections.
    match /transactions/{transactionId} {
      allow read: if true;
      allow create: if isAdmin();
      allow update, delete: if false; // Original doc is meant to be moved, not edited
    }
    // New rule for season-specific transactions subcollection
    match /transactions/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /draft_results/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /awards/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /power_rankings/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /lottery_results/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /live_scoring_status/{doc=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /users/{userId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow write: if isAdmin();
    }
    match /daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /post_daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /post_daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    // --- ADDED: Rule for collectionGroup on seasonal_records ---
    match /{path=**}/seasonal_records/{recordId} {
        allow read: if true;
    }
    // =======================================================
    // V2 DEVELOPMENT RULES (_dev)
    // =======================================================

    match /v2_players_dev/{playerId}/{documents=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /v2_teams_dev/{teamId}/{documents=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /seasons_dev/{seasonId}/{documents=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /live_games_dev/{gameId} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    // Updated rule for transactions: read is public, write is for the initial document,
    // and new rule for season-specific subcollections.
    match /transactions_dev/{transactionId} {
      allow read: if true;
      allow create: if isAdminDev();
      allow update, delete: if false;
    }
    // New rule for season-specific transactions subcollection
    match /transactions_dev/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /draft_results_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /draftPicks_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev(); 
    }
    match /awards_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /power_rankings_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /lottery_results_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /live_scoring_status_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /usage_stats_dev/{doc=**} {
        allow read: if true;
        allow write: if isAdminDev();
    }
    match /users_dev/{userId} {
        allow read: if request.auth.uid == userId || isAdminDev();
        allow write: if isAdminDev();
    }
    match /daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /post_daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    match /daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    // --- ADDED: Rule for collectionGroup on seasonal_records_dev ---
    match /{path=**}/seasonal_records_dev/{recordId} {
        allow read: if true;
    }
    match /post_daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isAdminDev();
    }
    // =======================================================
    // ADMIN-ONLY & LEGACY RULES (Unchanged)
    // =======================================================

    // == Rules for NEW Statistics Collections (Admin-Only) ==
    match /daily_averages/{doc=**} {
      allow read, write: if isAdmin();
    }
    match /post_daily_averages/{doc=**} {
      allow read, write: if isAdmin();
    }
    match /daily_scores/{doc=**} {
      allow read, write: if isAdmin();
    }
    match /post_daily_scores/{doc=**} {
      allow read, write: if isAdmin();
    }

    // == Rules for Live S7 Site (Public Read, Admin Write) ==
    match /admins/{doc} {
      allow read, write: if false;
    }
    match /players/{doc} { allow read: if true;
      allow write: if false; }
    match /teams/{doc} { allow read: if true; allow write: if false;
    }
    match /schedule/{doc} {
      allow read: if true;
      allow write: if false;
    }
    match /post_schedule/{doc} { allow read: if true; allow write: if false;
    }
    match /weekly_averages/{doc} { allow read: if true; allow write: if false;
    }
    match /transaction_log/{doc} { allow read: if true; allow write: if false;
    }

    // Legacy Lineups (to be replaced by seasons/{seasonId}/lineups)
    match /lineups/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /post_lineups/{doc} {
        allow read: if true;
        allow write: if isAdmin();
    }
     match /draftPicks/{doc} {
      allow read: if true;
      allow write: if isAdmin(); // Admins can now edit picks
    }
    match /tradeblocks/{doc} {
      allow read: if true;
      allow write: if request.auth.uid == resource.data.gm_uid || isAdmin() || isAdminDev();
    }

    // These 'new_' collections will eventually be deprecated.
    match /new_players/{doc=**} {
      allow read, write: if isAdmin();
    }
    match /new_teams/{doc=**} {
      allow read, write: if isAdmin();
    }
  }
}
