rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- UNIFIED HELPER FUNCTIONS ---
    function isUserAdmin() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      let userDevPath = /databases/$(database)/documents/users_dev/$(request.auth.uid);
      let isProdAdmin = exists(userPath) && get(userPath).data.role == 'admin';
      let isDevAdmin = exists(userDevPath) && get(userDevPath).data.role == 'admin';
      return isProdAdmin || isDevAdmin;
    }

    // NEW function to check for scorekeeper or admin roles
    function isScorekeeperOrAdmin() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      let userDevPath = /databases/$(database)/documents/users_dev/$(request.auth.uid);

      let isProdPermitted = exists(userPath) && (get(userPath).data.role == 'admin' || get(userPath).data.role == 'scorekeeper');
      let isDevPermitted = exists(userDevPath) && (get(userDevPath).data.role == 'admin' || get(userDevPath).data.role == 'scorekeeper');

      return isProdPermitted || isDevPermitted;
    }

    // Function to check if user is a GM
    function isUserGM() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      let userDevPath = /databases/$(database)/documents/users_dev/$(request.auth.uid);
      let isProdGM = exists(userPath) && get(userPath).data.role == 'gm';
      let isDevGM = exists(userDevPath) && get(userDevPath).data.role == 'gm';
      return isProdGM || isDevGM;
    }

    // Function to check if GM manages this player's team
    function gmManagesPlayer(playerId) {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      let userDevPath = /databases/$(database)/documents/users_dev/$(request.auth.uid);
      let playerPath = /databases/$(database)/documents/v2_players/$(playerId);

      let gmTeamId = exists(userPath) ? get(userPath).data.team_id : (exists(userDevPath) ? get(userDevPath).data.team_id : '');
      let playerTeamId = exists(playerPath) ? get(playerPath).data.current_team_id : '';

      return gmTeamId != '' && gmTeamId == playerTeamId;
    }

    // =======================================================
    // V2 RULES (PRODUCTION & DEVELOPMENT)
    // =======================================================
    match /lineup_deadlines/{deadlineId} {
      // Allow any signed-in user (GMs, Admins) to read deadlines
      allow read: if request.auth != null;
      
      // Only allow users with the 'admin' role to create or update deadlines
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /lineup_deadlines_dev/{deadlineId} {
      // Allow any signed-in user (GMs, Admins) to read deadlines
      allow read: if request.auth != null;

      // Only allow users with the 'admin' role to create or update deadlines
      allow write: if get(/databases/$(database)/documents/users_dev/$(request.auth.uid)).data.role == 'admin';
    }
    match /pending_transactions/{docId} {
        allow read, write: if isUserAdmin();
    }
    match /pending_transactions_dev/{docId} {
        allow read, write: if isUserAdmin();
    }
    match /notifications/{docId} {
      allow read, write: if isUserAdmin();
    }
    match /pending_lineups/{gameId} {
        // GMs need to read submission status, so allow any signed-in user to read.
        allow read: if request.auth != null;
        // Only scorekeepers/admins can write directly from the manage-games page.
        allow write: if isScorekeeperOrAdmin();
    }
    match /pending_lineups_dev/{gameId} {
        // GMs need to read submission status, so allow any signed-in user to read.
        allow read: if request.auth != null;
        // Only scorekeepers/admins can write directly from the manage-games page.
        allow write: if isScorekeeperOrAdmin();
    }

    match /scorekeeper_activity_log/{docId} {
        allow read, list: if isUserAdmin();
        allow write: if false; // Only backend can write
    }
    match /scorekeeper_activity_log_dev/{docId} {
        allow read, list: if isUserAdmin();
        allow write: if false; // Only backend can write
    }
    match /archived_live_games/{doc=**} {
        allow read: if isUserAdmin();
        allow write: if false; // Only backend can write
    }
    match /archived_live_games_dev/{doc=**} {
        allow read: if isUserAdmin();
        allow write: if false; // Only backend can write
    }

    match /settings/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /tradeblocks/{teamId} {
      allow read: if true;
      allow write: if request.auth.uid == request.resource.data.gm_uid || isUserAdmin();
    }

    // --- Production Rules ---

    match /seasons/{seasonId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isUserAdmin();
      match /{documents=**} {
        allow read: if true;
        allow write: if isUserAdmin();
      }
    }
    match /usage_stats/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /v2_players/{playerId} {
      allow read: if true;
      allow write: if isUserAdmin();
      // Allow GMs to update only player_handle for their team's players
      allow update: if isUserGM() && gmManagesPlayer(playerId)
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['player_handle']);
      match /{document=**} {
        allow read: if true;
        allow write: if isUserAdmin();
      }
    }
    match /v2_teams/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /draftPicks/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /live_games/{gameId} {
        allow read: if true;
        allow write: if isScorekeeperOrAdmin(); // Allow scorekeepers to write
    }
    match /transactions/{transactionId} {
      allow read: if true;
      allow create: if isUserAdmin();
      allow update, delete: if false; 
    }
    match /transactions/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /draft_results/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /awards/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /power_rankings/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /lottery_results/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /live_scoring_status/{doc=**} {
        allow read: if true;
        allow write: if isScorekeeperOrAdmin(); // Allow scorekeepers to write
    }
    match /users/{userId} {
        // Allow users to read their own data
        allow read: if request.auth.uid == userId || isUserAdmin();
        // Only admins can change roles
        allow write: if isUserAdmin();
    }
    match /daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /post_daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /post_daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /leaderboards/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /post_leaderboards/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /game_flow_snapshots/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /daily_leaderboards/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /{path=**}/seasonal_stats/{recordId} {
        allow get, list: if true;
    }
    match /{path=**}/seasonal_records/{recordId} {
        allow get, list: if true;
    }

    // =======================================================
    // MINOR LEAGUE RULES
    // =======================================================

    match /minor_lineup_deadlines/{deadlineId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /minor_pending_transactions/{docId} {
      allow read, write: if isUserAdmin();
    }

    match /minor_pending_lineups/{gameId} {
      allow read: if request.auth != null;
      allow write: if isScorekeeperOrAdmin();
    }

    match /minor_archived_live_games/{doc=**} {
      allow read: if isUserAdmin();
      allow write: if false; // Only backend can write
    }

    match /minor_seasons/{seasonId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isUserAdmin();
      match /{documents=**} {
        allow read: if true;
        allow write: if isUserAdmin();
      }
    }

    match /minor_v2_players/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_v2_teams/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_draftPicks/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_live_games/{gameId} {
      allow read: if true;
      allow write: if isScorekeeperOrAdmin();
    }

    match /minor_transactions/{transactionId} {
      allow read: if true;
      allow create: if isUserAdmin();
      allow update, delete: if false;
    }

    match /minor_transactions/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_live_scoring_status/{doc=**} {
      allow read: if true;
      allow write: if isScorekeeperOrAdmin();
    }

    match /minor_usage_stats/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_draft_results/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_awards/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_power_rankings/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_lottery_results/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_post_daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_post_daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_leaderboards/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_post_leaderboards/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_game_flow_snapshots/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_daily_leaderboards/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_v2_teams/{teamId}/minor_seasonal_stats/{recordId} {
      allow get, list: if true;
    }

    match /minor_v2_teams/{teamId}/minor_seasonal_records/{recordId} {
      allow get, list: if true;
    }

    match /minor_v2_players/{playerId}/minor_seasonal_stats/{recordId} {
      allow get, list: if true;
    }

    match /minor_v2_players/{playerId}/minor_seasonal_records/{recordId} {
      allow get, list: if true;
    }

    // Wildcard patterns for collectionGroup queries
    match /{path=**}/minor_seasonal_stats/{recordId} {
      allow get, list: if true;
    }

    match /{path=**}/minor_seasonal_records/{recordId} {
      allow get, list: if true;
    }

    // --- Development Rules (_dev) ---

    match /seasons_dev/{seasonId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isUserAdmin();
      match /{documents=**} {
        allow read: if true;
        allow write: if isUserAdmin();
      }
    }

    match /v2_players_dev/{playerId} {
      allow read: if true;
      allow write: if isUserAdmin();
      // Allow GMs to update only player_handle for their team's players
      allow update: if isUserGM() && gmManagesPlayer(playerId)
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['player_handle']);
      match /{document=**} {
        allow read: if true;
        allow write: if isUserAdmin();
      }
    }
    match /v2_teams_dev/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /live_games_dev/{gameId} {
        allow read: if true;
        allow write: if isScorekeeperOrAdmin(); // Allow scorekeepers to write
    }
    match /transactions_dev/{transactionId} {
      allow read: if true;
      allow create: if isUserAdmin();
      allow update, delete: if false;
    }
    match /transactions_dev/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /draft_results_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /draftPicks_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /awards_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /power_rankings_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /lottery_results_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /live_scoring_status_dev/{doc=**} {
        allow read: if true;
        allow write: if isScorekeeperOrAdmin(); // Allow scorekeepers to write
    }
    match /usage_stats_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /users_dev/{userId} {
        allow read: if request.auth.uid == userId || isUserAdmin();
        allow write: if isUserAdmin();
    }
    match /daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /post_daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /leaderboards_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /post_leaderboards_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /game_flow_snapshots_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /daily_leaderboards_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /{path=**}/seasonal_stats_dev/{recordId} {
        allow get, list: if true;
    }
    match /{path=**}/seasonal_records_dev/{recordId} {
        allow get, list: if true;
    }
    match /post_daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    // =======================================================
    // MINOR LEAGUE DEVELOPMENT RULES
    // =======================================================

    match /minor_lineup_deadlines_dev/{deadlineId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users_dev/$(request.auth.uid)).data.role == 'admin';
    }

    match /minor_pending_transactions_dev/{docId} {
      allow read, write: if isUserAdmin();
    }

    match /minor_pending_lineups_dev/{gameId} {
      allow read: if request.auth != null;
      allow write: if isScorekeeperOrAdmin();
    }

    match /minor_archived_live_games_dev/{doc=**} {
      allow read: if isUserAdmin();
      allow write: if false;
    }

    match /minor_seasons_dev/{seasonId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isUserAdmin();
      match /{documents=**} {
        allow read: if true;
        allow write: if isUserAdmin();
      }
    }

    match /minor_v2_players_dev/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_v2_teams_dev/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_draftPicks_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_live_games_dev/{gameId} {
      allow read: if true;
      allow write: if isScorekeeperOrAdmin();
    }

    match /minor_transactions_dev/{transactionId} {
      allow read: if true;
      allow create: if isUserAdmin();
      allow update, delete: if false;
    }

    match /minor_transactions_dev/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_live_scoring_status_dev/{doc=**} {
      allow read: if true;
      allow write: if isScorekeeperOrAdmin();
    }

    match /minor_usage_stats_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_draft_results_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_awards_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_power_rankings_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_lottery_results_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_post_daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_post_daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_leaderboards_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_post_leaderboards_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_game_flow_snapshots_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_daily_leaderboards_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /minor_v2_teams_dev/{teamId}/minor_seasonal_stats/{recordId} {
      allow get, list: if true;
    }

    match /minor_v2_teams_dev/{teamId}/minor_seasonal_records/{recordId} {
      allow get, list: if true;
    }

    match /minor_v2_players_dev/{playerId}/minor_seasonal_stats/{recordId} {
      allow get, list: if true;
    }

    match /minor_v2_players_dev/{playerId}/minor_seasonal_records/{recordId} {
      allow get, list: if true;
    }

    // =======================================================
    // ADMIN-ONLY & LEGACY RULES
    // =======================================================

    match /admins/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false;
    }
    match /players/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /teams/{document=**} { 
      allow read: if true;
      allow write: if false;
    }
    match /schedule/{doc} {
      allow read: if true;
      allow write: if false;
    }
    match /post_schedule/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /weekly_averages/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /transaction_log/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /lineups/{doc} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /post_lineups/{doc} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /new_players/{doc=**} {
      allow read, write: if isUserAdmin();
    }
    match /new_teams/{doc=**} {
      allow read, write: if isUserAdmin();
    }
  }
}
