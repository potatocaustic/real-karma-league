rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- UNIFIED HELPER FUNCTIONS ---
    function isUserAdmin() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      let userDevPath = /databases/$(database)/documents/users_dev/$(request.auth.uid);
      let isProdAdmin = exists(userPath) && get(userPath).data.role == 'admin';
      let isDevAdmin = exists(userDevPath) && get(userDevPath).data.role == 'admin';
      return isProdAdmin || isDevAdmin;
    }

    // NEW function to check for scorekeeper or admin roles
    function isScorekeeperOrAdmin() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      let userDevPath = /databases/$(database)/documents/users_dev/$(request.auth.uid);

      let isProdPermitted = exists(userPath) && (get(userPath).data.role == 'admin' || get(userPath).data.role == 'scorekeeper');
      let isDevPermitted = exists(userDevPath) && (get(userDevPath).data.role == 'admin' || get(userDevPath).data.role == 'scorekeeper');
      
      return isProdPermitted || isDevPermitted;
    }

    // =======================================================
    // V2 RULES (PRODUCTION & DEVELOPMENT)
    // =======================================================
    match /pending_transactions/{docId} {
        allow read, write: if isUserAdmin();
    }
    match /pending_transactions_dev/{docId} {
        allow read, write: if isUserAdmin();
    }
    match /notifications/{docId} {
      allow read, write: if isUserAdmin();
    }
    match /pending_lineups/{gameId} {
        allow read, write: if isScorekeeperOrAdmin();
    }
    match /pending_lineups_dev/{gameId} {
        allow read, write: if isScorekeeperOrAdmin();
    }

    match /scorekeeper_activity_log/{docId} {
        allow read, list: if isUserAdmin();
        allow write: if false; // Only backend can write
    }
    match /scorekeeper_activity_log_dev/{docId} {
        allow read, list: if isUserAdmin();
        allow write: if false; // Only backend can write
    }
    match /archived_live_games/{doc=**} {
        allow read: if isUserAdmin();
        allow write: if false; // Only backend can write
    }
    match /archived_live_games_dev/{doc=**} {
        allow read: if isUserAdmin();
        allow write: if false; // Only backend can write
    }

    match /settings/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    match /tradeblocks/{teamId} {
      allow read: if true;
      allow write: if request.auth.uid == request.resource.data.gm_uid || isUserAdmin();
    }

    // --- Production Rules ---

    match /seasons/{seasonId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isUserAdmin();
      match /{documents=**} {
        allow read: if true;
        allow write: if isUserAdmin();
      }
    }
    match /usage_stats/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /v2_players/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /v2_teams/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /draftPicks/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /live_games/{gameId} {
        allow read: if true;
        allow write: if isScorekeeperOrAdmin(); // Allow scorekeepers to write
    }
    match /transactions/{transactionId} {
      allow read: if true;
      allow create: if isUserAdmin();
      allow update, delete: if false; 
    }
    match /transactions/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /draft_results/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /awards/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /power_rankings/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /lottery_results/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /live_scoring_status/{doc=**} {
        allow read: if true;
        allow write: if isScorekeeperOrAdmin(); // Allow scorekeepers to write
    }
    match /users/{userId} {
        // Allow users to read their own data
        allow read: if request.auth.uid == userId || isUserAdmin();
        // Only admins can change roles
        allow write: if isUserAdmin();
    }
    match /daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /post_daily_scores/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /post_daily_averages/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /leaderboards/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /{path=**}/seasonal_stats/{recordId} {
        allow get, list: if true;
    }
    match /{path=**}/seasonal_records/{recordId} {
        allow get, list: if true;
    }

    // --- Development Rules (_dev) ---

    match /seasons_dev/{seasonId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isUserAdmin();
      match /{documents=**} {
        allow read: if true;
        allow write: if isUserAdmin();
      }
    }

    match /v2_players_dev/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /v2_teams_dev/{document=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /live_games_dev/{gameId} {
        allow read: if true;
        allow write: if isScorekeeperOrAdmin(); // Allow scorekeepers to write
    }
    match /transactions_dev/{transactionId} {
      allow read: if true;
      allow create: if isUserAdmin();
      allow update, delete: if false;
    }
    match /transactions_dev/seasons/{seasonId}/{transactionId} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /draft_results_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /draftPicks_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /awards_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /power_rankings_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /lottery_results_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /live_scoring_status_dev/{doc=**} {
        allow read: if true;
        allow write: if isScorekeeperOrAdmin(); // Allow scorekeepers to write
    }
    match /usage_stats_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /users_dev/{userId} {
        allow read: if request.auth.uid == userId || isUserAdmin();
        allow write: if isUserAdmin();
    }
    match /daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /post_daily_scores_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /leaderboards_dev/{doc=**} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /{path=**}/seasonal_stats_dev/{recordId} {
        allow get, list: if true;
    }
    match /{path=**}/seasonal_records_dev/{recordId} {
        allow get, list: if true;
    }
    match /post_daily_averages_dev/{doc=**} {
      allow read: if true;
      allow write: if isUserAdmin();
    }

    // =======================================================
    // ADMIN-ONLY & LEGACY RULES
    // =======================================================

    match /admins/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false;
    }
    match /players/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /teams/{document=**} { 
      allow read: if true;
      allow write: if false;
    }
    match /schedule/{doc} {
      allow read: if true;
      allow write: if false;
    }
    match /post_schedule/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /weekly_averages/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /transaction_log/{doc} { 
      allow read: if true;
      allow write: if false;
    }
    match /lineups/{doc} {
      allow read: if true;
      allow write: if isUserAdmin();
    }
    match /post_lineups/{doc} {
        allow read: if true;
        allow write: if isUserAdmin();
    }
    match /new_players/{doc=**} {
      allow read, write: if isUserAdmin();
    }
    match /new_teams/{doc=**} {
      allow read, write: if isUserAdmin();
    }
  }
}